<?xml version="1.0" encoding="UTF-8"?>
<databaseChangeLog
  xmlns="http://www.liquibase.org/xml/ns/dbchangelog"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://www.liquibase.org/xml/ns/dbchangelog
         http://www.liquibase.org/xml/ns/dbchangelog/dbchangelog-2.0.xsd"
  logicalFilePath="table/0030_work.xml">

    <changeSet id="30" author="Artiom Sharikov">
        <createTable tableName="work" remarks="Работа" schemaName="${db.schema}">
            <column name="id" type="bigint" autoIncrement="true" remarks="Идентификатор работы">
                <constraints primaryKey="true" primaryKeyName="work_pkey" nullable="false"/>
            </column>
            <column name="code" type="varchar(256)" remarks="Шифр">
                <constraints nullable="false" unique="true" uniqueConstraintName="work_code_ukey"/>
            </column>
            <column name="name" type="text" remarks="Наименование">
                <constraints nullable="false"/>
            </column>
            <column name="unit_id" type="bigint" remarks="Идентификатор единицы измереня">
                <constraints nullable="false"/>
            </column>
        </createTable>
        <addForeignKeyConstraint constraintName="work_unit_id_fkey"
            baseTableSchemaName="${db.schema}"
            baseTableName="work" baseColumnNames="unit_id"
            referencedTableName="unit" referencedColumnNames="id" referencedTableSchemaName="${db.schema}"
         />
        <rollback>
            <dropTable tableName="work" schemaName="${db.schema}"/>
        </rollback>
    </changeSet>

</databaseChangeLog>
